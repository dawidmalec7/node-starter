{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "target": "esnext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./src",
        "paths": {
          "src/*": [
            "./src/*"
          ],
    }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
       "node_modules"
    ]
}